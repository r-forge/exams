<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE questestinterop SYSTEM "ims_qtiasiv1p2p1.dtd">

<questestinterop>
<assessment ident="##TestIdent" title="##TestTitle">
<qtimetadata>
<qtimetadatafield>
<fieldlabel>qmd_assessmenttype</fieldlabel>
<fieldentry>Assessment</fieldentry>
</qtimetadatafield>
</qtimetadata>
<assessmentcontrol feedbackswitch="No" hintswitch="No" solutionswitch="Yes"/>
<outcomes_processing scoremodel="SumOfScores">
<outcomes>
<decvar varname="SCORE" vartype="Decimal" cutvalue="0" />
</outcomes>
</outcomes_processing>

<section ident="##SectionId" title="##SectionTitle">

<selection_ordering>
<selection>
<selection_number>1</selection_number>
</selection>
<order order_type="Random"/>
</selection_ordering>

<item ident="##ItemId" title="##ItemTitle" maxattempts="##ItemMaxAttempts">
<itemcontrol feedbackswitch="No" hintswitch="No" solutionswitch="Yes"/>
<presentation>
##ItemBody
<respcondition title="Fail" continue="Yes">
<conditionvar>
<other/>
</conditionvar>
<setvar varname="SCORE" action="Set">0</setvar>
<displayfeedback feedbacktype="Response" linkrefid="Fail"/>
<displayfeedback feedbacktype="Solution" linkrefid="Solution"/>
<displayfeedback feedbacktype="Hint" linkrefid="Hint"/>
</respcondition>
</resprocessing>
<itemfeedback ident="Hint" view="All">
<hint feedbackstyle="Incremental">
<hintmaterial>
<material>
<mattext><![CDATA[
##ItemHints
]]></mattext>
</material>
</hintmaterial>
</hint>
</itemfeedback>
<itemfeedback ident="Solution" view="All">
<solution>
<solutionmaterial>
<material>
<mattext texttype="text/html"><![CDATA[
##ItemSolution
]]></mattext>
</material>
</solutionmaterial>
</solution>
</itemfeedback>
<itemfeedback ident="Fail" view="All">
<material>
<mattext texttype="text/html"><![CDATA[
##ItemFeedback
]]></mattext>
</material>
</itemfeedback>
</item>
</section>

</assessment>
</questestinterop>
