s2mest<-round(runif(1)*50+100,2)
s2hest<-round(runif(1)*40+80,2)
s2m<-s2mest*(n-1)/n
s2h<-s2hest*(n-1)/n

i2<-sample(1:2,1)
if(i2==1){xs<-xsm
s2est<-s2mest
bezirk<-"Mariahilf"
}
if(i2==2){xs<-xsh
s2est<-s2hest
